@model IEnumerable<Course>
@{
    ViewData["Title"] = "Index";
}
  
<a asp-action="Create">Create a Course</a>

<h2>Here is the list of All Courses</h2>
<table style="width:100%" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Course c in Model)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.Name</td>
                <td><a asp-action="Display" asp-route-id="@c.Id" class="btn btn-info">Display</a></td>
                <td><a asp-action="Update" asp-route-id="@c.Id" class="btn btn-primary">Update</a></td>
                <td>
                    <form asp-route-id="@c.Id" asp-action="Delete" method="post">
                        <button type="submit" class="btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
