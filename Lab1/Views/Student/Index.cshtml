@model IEnumerable<Student>
@{
    ViewData["Title"] = "Index";
}
  
<a asp-action="Create">Create a Students</a>

<form asp-action="Index" method="post" class="input-group">
	<div class="input-group mb-2 mt-2">
		<input type="text" class="form-control rounded" placeholder="Search" name="serchedname" aria-label="Search" aria-describedby="search-addon" />
		<button type="submit" class="btn btn-outline-primary">search</button>
	</div>
</form>

<h2>Here is the list of Students</h2>
<table style="width:100%" class="table table-striped table-hover">
    <thead>
        <tr>
            @*<th>Id</th>*@
            <th>Name</th>
            <th>Age</th>
            <th>Department</th>
            <th>Email</th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Student s in Model)
        {
            <tr asp-action="Display" asp-route-id="@s.Id">
                @*<td>@s.Id</td>*@
                <td>@s.Name</td>
                <td>@s.Age</td>
                <td>@s.Department.Name</td>
                <td>@s.Email</td>
                <td><a asp-action="Courses" asp-route-id="@s.Id" class="btn btn-outline-info">Courses</a></td>
                <td><a asp-action="Display" asp-route-id="@s.Id" class="btn btn-info">Display</a></td>
                <td><a asp-action="Update" asp-route-id="@s.Id" class="btn btn-primary">Update</a></td>
                <td>
                    <form asp-route-id="@s.Id" asp-action="Delete" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
